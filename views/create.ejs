<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-700 px-10 py-5 text-white">
    <h1 class="text-xl">Create new Post</h1>
    <hr class="opacity-10 mt-3">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <label class="text-zinc-300 " for="postimage"></label>
        <input class="block  w-1/3 px-3 py-2 rounded-md mt-10 mb-6 "  type="file" name="postimage" id="postimage">
        <label class="text-zinc-300 mt-5" for="title">Title</label>
        <input class="block text-zinc-600 w-1/3 px-3 py-2 rounded-md border-2 " placeholder="Title"  type="text" name="title"  id="title">
        <label class="text-zinc-300 " for="description">Description</label>
        <textarea class="block text-zinc-600 w-1/3 px-3 py-2 rounded border-2-md " placeholder="Description" name="description" id="description" cols="20" rows="5"></textarea>
        <input class="block w-1/3 px-3 py-2 rounded-full bg-red-700 mt-3 " type="submit" name="submit" id="submit" value="Create Post">
    </form>
</div>
<% include ./partials/footer.ejs %>